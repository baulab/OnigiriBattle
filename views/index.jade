html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='/stylesheets/jquery.countdown.css', rel='stylesheet')
    script(src='/socket.io/socket.io.js')
    script(src='/js/jquery-1.11.1.min.js')
    script(type='text/javascript' src='/js/main.js')
    script(type='text/javascript' src='/js/InputName.js')
    script(type='text/javascript' src='/js/chat.js')
    script(src='/js/jquery.plugin.min.js')
    script(src='/js/jquery.countdown.js')
  body.backClass
    #page0(style="display:show;")
      p LOGIN
      form(id="loginInfo" name="input")
        | Username:
        input(type="text", id="username" name="user")
        br

        label Character: 
          select(name="character" id="character")
            option(value="red") Red
            option(value="yellow") Yellow
            option(value="blue") Blue
            option(value="purple") Purple
            option(value="black") Black
            option(value="green") Green
            option(value="pink") Pink
            option(value="orange") Orange
                   
        br
        //button(style = "background-color: transparent; border: 0;")
        img(id="loginInfoSubmit" class="start_btn" src="../images/start_button.png")
        
    #page1(style="display:none;")
      span(id="start_btn_span")
        button(style = "background-color: transparent; border: 0;")
        img(id="start_button" class="start_btn" src="../images/start_button.png")
      p name: 
        span(id="nameSpan") Origiri
      p color: 
        span(id="colorSpan") Red
      p host: 
        span(id="hostSpan")  

      table
        tr
          td(rowspan="2")
            p FRIENDS
            textarea(id="friendsList",readonly="true")

          td(rowspan="2")
            div
            button(style = "background-color: transparent; border: 0;",id="join")
              img(id="join_btn" src="../images/join_arrow.png")
            
            div  
            button(style= "background-color: transparent; border: 0;",id="escape")
              img(id="escape_btn" src="../images/escape_arrow.png")

          td(rowspan="2")
            p FIGHTING
            textarea(id="fightList",readonly="true")

          td.tableRight(style="width:500px")
            p Chatting Room
            textarea(id="chattingRoom",readonly="true")
            
          tr
            td
              textarea(placeholder="enter messages" id="enterMessage")
              button(style = "background-color: transparent; border: 0;",id="sendMessage")
                img(id="send_message_btn" src="../images/send_message_btn.png")
                
    #page2(style="display:none;")
      #battle.battle
        p hello
    #countdown(style="display:none;")



